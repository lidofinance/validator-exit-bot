# ===== Network Configuration =====

# Execution Layer RPC Endpoints (comma-separated)
# Example: http://localhost:8545,http://backup-node:8545
WEB3_RPC_ENDPOINTS=http://localhost:8545

# Consensus Layer Beacon Node URL
CONSENSUS_CLIENT_URL=http://localhost:5052

# ===== Ports Configuration =====

# Prometheus metrics port (both host and container)
PROMETHEUS_PORT=9000

# Prometheus metrics namespace prefix
PROMETHEUS_PREFIX=validator_exit_bot

# Health check server port (both host and container)
SERVER_PORT=9010

# ===== Lido Protocol =====

# Lido Locator Contract Address
# Mainnet: 0xC1d0b3DE6792Bf6b4b37EccdcC24e45978Cfd2Eb
# Holesky: 0x28FAB2059C713A7F9D8c86Db49f9bb0e96Af1ef8
LIDO_LOCATOR=0xC1d0b3DE6792Bf6b4b37EccdcC24e45978Cfd2Eb

# Staking Module IDs to process (comma-separated)
# 1 = Curated Node Operators
# 2 = Simple DVT
MODULES_WHITELIST=1

# Number of blocks to wait between bot executions
BLOCKS_BETWEEN_EXECUTION=25

# How often the bot should wake up and check for exits (in seconds)
# Lower values = more frequent checks, higher values = less load
SLEEP_INTERVAL_SECONDS=60

# Number of days to look back on first startup for historical events
# After initial scan, bot continues from last processed block
LOOKBACK_DAYS=7

# ===== Transaction Configuration =====

# Private key for transaction signing (without 0x prefix)
# WARNING: Keep this secret! Never commit to git!
WALLET_PRIVATE_KEY=your_private_key_here

# Dry run mode - if true, transactions are prepared but not sent
DRY_RUN=false

# Gas fee configuration
MIN_PRIORITY_FEE=50 mwei
MAX_PRIORITY_FEE=10 gwei
MAX_GAS_FEE=100 gwei
CONTRACT_GAS_LIMIT=15000000
GAS_PRIORITY_FEE_PERCENTILE=25

# ===== Logging =====

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

